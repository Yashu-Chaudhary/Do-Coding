class SCurvePainter extends CustomPainter {
  @override
  void paint(Canvas canvas, Size size) {
    final paint = Paint()
      ..style = PaintingStyle.fill;

    final path = Path();
    path.moveTo(0, size.height / 2);
    path.cubicTo(
        size.width / 4, size.height / 2 - 50, // Control point 1
        3 * size.width / 4, size.height / 2 + 50, // Control point 2
        size.width, size.height / 2); // End point

    final gradient = LinearGradient(
      begin: Alignment.topCenter,
      end: Alignment.bottomCenter,
      colors: [Colors.blue, Colors.white],
    );

    paint.shader = gradient.createShader(Rect.fromPoints(
      Offset(0, 0),
      Offset(0, size.height),
    ));

    canvas.drawPath(path, paint);
  }

  @override
  bool shouldRepaint(covariant CustomPainter oldDelegate) {
    return false;
  }
}
